                    <joint name="ZF_PIP1_to_ZF_DIP" axis="0.8 0.4 0.3" limited="true"
                    pos="0.05 -0.21 -0.11" range="-4 4" type="hinge" />
                </body>
            </body>
        </body>


    </worldbody>
</mujoco>