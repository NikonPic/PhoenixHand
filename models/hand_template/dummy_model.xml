                <geom class="zf" mesh="ZF-MCP" type="mesh" />

                <body name="b3" pos="-0.1 -0.1 0.1" quat="1 1 1 0.0000">



                <body name="tip" pos="0.0 0.0 1.0" quat="1.0 0.0 0.0 0.0"/>
